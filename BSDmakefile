# This is wrapper around GNU make.

all: banner
	@gmake all

b: bin

bin:
	@gmake bin

e: executable

executable:
	@gmake executable

dep: banner
	@gmake dep

tags: banner
	@gmake tags

i: install

install:
	@gmake install

c: clean

clean: banner
	@gmake clean

m: mrproper

mrproper: banner
	@gmake mrproper

p: purge

purge: banner
	@gmake purge

banner:
	@echo "--- It is only a wrapper, use GNU make (gmake). ---"

